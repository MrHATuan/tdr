<div class="login-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Log in</h2>
          
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="panel-body">
                <%= f.email_field :email, required: true, autofocus: true, label: false, placeholder: 'Email', class: 'form-control' %>
                <%= f.password_field :password, required: true, placeholder: 'Password', label: false, class: 'form-control', autocomplete: "off" %>
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
                <%= f.submit "Log in", class: 'btn-lg btn-info btn-block' %>
                <%= render "devise/shared/links" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>
