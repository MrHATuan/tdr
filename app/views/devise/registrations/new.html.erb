
<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Sign up</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="panel-body">
                  <%= f.email_field :email, required: true, autofocus: true, label: false, placeholder: 'Email',class: 'form-control' %>
                  <%= f.text_field :name, required: true, autofocus: true, label: false, placeholder: 'Name',
                    class: 'form-control' %>
                    
                  <div class="field">
                    <%= f.file_field :avatar, class: "form-control" %>
                    <%= f.hidden_field :avatar_cache %>
                  </div>
                  
                  <%= f.password_field :password, autocomplete: "off", required: true, label: false,
                    placeholder: "Password (#{@minimum_password_length} characters minimum)",
                    class: 'form-control' %>
                
                  <%= f.password_field :password_confirmation, autocomplete: "off", required: true, label: false, placeholder: 'Confirm Password', class: 'form-control' %>
                
                  <%= f.submit "Sign up", class: 'btn-lg btn-info btn-block' %>
                  
                  <%= render "devise/shared/links" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>
