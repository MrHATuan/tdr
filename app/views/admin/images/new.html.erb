<% provide :title, t("createlocation") %>
<h1><%= t :createimage %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @image], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.file_field :img, accept: "image/jpeg, image/gif, image/png", class: "form-control" %>

      <%= f.label :location %>
      <%= f.collection_select :location_id, Location.all, :id, :name %>

      <%= f.submit t(:create), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
