<% provide :title, t("alllocations") %>
<h1><%= t :alllocations %></h1>

<div class="col-lg-4 col-lg-offset-5">
  <div class="center form-group">
    <%= link_to t("newlocation"), new_admin_location_path,
      class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="col-sm-6 col-sm-offset-3">
  <%= search_form_for [:admin, @search], class: "form-inline" do |f| %>
    <div class="form-group">
        <%= f.label :name_cont, 'Location Name:' %>
        <%= f.text_field :name_cont, class: "form-control" %><br>
    </div>
    <%= f.submit 'Search', class: "btn btn-default" %>
<% end %>
</div>
<div class="col-sm-6 col-sm-offset-3">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= sort_link(@search, :name, "Name") %></th>
          <th>Category</th>
          <th>Rating</th>
          <th>Introduction</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><%= link_to location.name, admin_location_path(location) %></td>
            <td><%= link_to location.category.name, admin_category_path(location.category) %></td>
            <td><%= location.rating %></td>
            <td><%= location.introduction %></td>
            <td><%= link_to t(:delete), [:admin, location],
              method: :delete, data: {confirm: t(:areyousure)},
              class: "btn btn-danger" %>
            <%= link_to t(:editlocation), edit_admin_location_path(location),
              class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
