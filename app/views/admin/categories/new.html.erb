<% provide :title, t(:new_category) %>
<h1><%= t :new_category %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: @category %>

      <%= f.label t(:name) %>
      <%= f.text_field :name, placeholder: t(:compose_title_new_category),
        class: "form-control" %>

      <%= f.submit t(:create_category), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
