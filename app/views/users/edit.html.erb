<% provide :title, t(:edit_user) %>
<div class=" col-md-6 col-md-offset-3 dn-front-group">
  <h1><%= t :update_profile %></h1>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for @user do |f| %>
        <%= render "shared/error_messages", object: @user %>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control dn-form-control" %>

        <%= f.submit t(:save_change), class: "btn btn-primary dn-front-user-btn" %>
      <% end %>

    </div>
  </div>
</div>
