<div class="registration-bg">
  <div class="container">
    <div class="profile panel">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <%= cl_image_tag @user.avatar_url :thumbnail %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="form-group">
            <label>Name: <h3><%= @user.name %></h3></label>
          </div>
          <div class="form-group">
            <label>Email: <h3><%= @user.email %></h3></label>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="row">
        <h2>Activities</h2>
          <ul class="list-group">
            <%= @activities.blank? ? t("activities.nothing") : render_activities(@activities) %>
          </ul>
      </div>
    </div>
  </div>
</div>
