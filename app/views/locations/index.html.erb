<% provide :title, t(:alllocation) %>
<h1><%= t :alllocation %></h1>

<div class="col-sm-6 col-sm-offset-3">
  <%= search_form_for @search, class: "form-inline" do |f| %>
    <%= f.condition_fields do |c| %>
      <%= render "condition_fields", f: c%>
    <% end %>
    <p><%= link_to_add_fields "Add Conditions", f, :condition %>
    <div class="actions"><%= f.submit "Search" %></div>
<% end %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Category</th>
      <th>Rating</th>
      <th>Introduction</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td class="clickable-row" data-href="<%= location_path location %>">
              <%= image_tag location.picture.url, alt: t("locationalt"), class:
                "img-responsive img-thumbnail", width: 300, height: 200 %>
            </td>
            <td class="clickable-row" data-href="<%= location_path location %>">
              <%= link_to location.name, location_path(location) %>
            </td>
            <td class="clickable-row" data-href="<%= location_path location %>">
              <%= location.category.name %>
            </td>
            <td class="clickable-row" data-href="<%= location_path location %>">
              <%= location.rating %>
            </td>
            <td class="clickable-row" data-href="<%= location_path location %>">
              <%= location.introduction %>
            </td>
            <td class="clickable-row" data-href="<%= location_path location %>">
              <%= link_to t(:Review), location_path(location), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>

